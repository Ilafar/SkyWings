<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="32dp"
    android:layout_marginHorizontal="12dp"
    android:paddingBottom="16dp"
    android:paddingHorizontal="8dp"
    android:background="@drawable/bg_layout"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/img_app_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.chip.Chip
        android:id="@+id/ticket"
        style="@style/Widget.Material3.Chip.Assist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="J2 8103"
        app:chipIcon="@drawable/img_menu_ticket"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.ExtraLarge" />

    <ImageView
        android:id="@+id/expand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_dropdown"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/ticket"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ticket"
        app:tint="@color/md_theme_primary" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3 h"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
        app:layout_constraintBottom_toTopOf="@+id/startHourText"
        app:layout_constraintEnd_toEndOf="@+id/expand"
        app:layout_constraintStart_toStartOf="@+id/expand"
        app:layout_constraintTop_toBottomOf="@+id/expand" />

    <TextView
        android:id="@+id/startHourText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="07:20"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@id/startMonthText"
        app:layout_constraintStart_toEndOf="@+id/materialDivider"
        app:layout_constraintTop_toBottomOf="@+id/ticket" />

    <TextView
        android:id="@+id/startMonthText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sun, 28 Apr"
        android:textColor="@color/md_theme_outline"
        app:layout_constraintEnd_toStartOf="@+id/fromText"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintBottom_toTopOf="@id/endHourText"
        app:layout_constraintStart_toStartOf="@+id/startHourText"
        app:layout_constraintTop_toBottomOf="@+id/startHourText" />

    <TextView
        android:id="@+id/fromText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bakı"
        android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
        app:layout_constraintBottom_toBottomOf="@+id/startHourText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toEndOf="@id/startHourText"
        app:layout_constraintTop_toTopOf="@+id/startHourText" />

    <TextView
        android:id="@+id/fromText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="İstanbul"
        android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
        app:layout_constraintBottom_toBottomOf="@+id/endHourText"
        app:layout_constraintStart_toStartOf="@+id/fromText"
        app:layout_constraintTop_toTopOf="@+id/endHourText" />

    <TextView
        android:id="@+id/fromAirport"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="Heydər Əlivey Beynəlxalq Aeroportu"
        app:layout_constraintEnd_toEndOf="@+id/textView6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/fromText"
        app:layout_constraintTop_toBottomOf="@+id/fromText" />

    <TextView
        android:id="@+id/fromAirport2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="Heydər Əlivey Beynəlxalq Aeroportu"
        app:layout_constraintEnd_toEndOf="@+id/fromAirport"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/fromText2"
        app:layout_constraintTop_toBottomOf="@+id/fromText2" />

    <TextView
        android:id="@+id/endHourText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="09:20"
        android:layout_marginTop="24dp"
        android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
        app:layout_constraintBottom_toTopOf="@id/endMonthText"
        app:layout_constraintEnd_toEndOf="@+id/startHourText"
        app:layout_constraintStart_toStartOf="@+id/startHourText"
        app:layout_constraintTop_toBottomOf="@+id/startMonthText" />

    <TextView
        android:id="@+id/endMonthText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sun, 28 Apr"
        android:textColor="@color/md_theme_outline"
        app:layout_constraintEnd_toStartOf="@+id/fromText"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/endHourText"
        app:layout_constraintTop_toBottomOf="@+id/endHourText" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/materialDivider"
        android:layout_width="4dp"
        android:layout_height="0dp"
        android:layout_marginVertical="16dp"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/endMonthText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/startHourText" />

    <TextView
        android:id="@+id/flightType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_edittext_full"
        android:padding="16dp"
        android:text="Economy"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
        android:textColor="@color/md_theme_outline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/endMonthText" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_bag"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/flightType"
        app:layout_constraintEnd_toEndOf="@+id/flightType"
        app:layout_constraintTop_toTopOf="@+id/flightType" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_food"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/flightType"
        app:layout_constraintEnd_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/flightType" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/passengerRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/flightType"/>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/viewGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="flightType,passengerRecycler,imageView3,imageView4"/>
</androidx.constraintlayout.widget.ConstraintLayout>