<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <layer-list >
            <item>
                <shape>
                    <corners android:radius="6dp"/>
                    <solid android:color="@color/md_theme_outlineVariant"/>
                    <stroke android:color="@color/md_theme_outlineVariant" android:width="1dp"/>
                </shape>
            </item>
            <item android:drawable="@drawable/ic_cancel"/>
        </layer-list>
    </item>
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="6dp"/>
                    <solid android:color="@color/md_theme_primary"/>
                    <stroke android:color="@color/md_theme_primary" android:width="1dp"/>
                </shape>
            </item>
            <item android:drawable="@drawable/ic_done"/>
        </layer-list>
    </item>
    <item android:state_checked="false">
            <shape>
                <corners android:radius="6dp"/>
                <stroke android:color="@color/md_theme_outline" android:width="1dp"/>
            </shape>
    </item>
</selector>